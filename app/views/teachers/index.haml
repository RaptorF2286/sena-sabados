%h1 Listado de profesores

%a.mdc-button.mdc-button--outlined{href: '/teachers/new'}
  %i.material-icons.mdc-button__icon{"aria-hidden" => "true"} person_add
  %span.mdc-button__label Crear Profesor

%hr/

%table{style: 'text-align: center'}
  %thead
    %tr
      %th Id
      %th Nombre
      %th Correo
      %th Fecha de nacimiento
      %th Programa
  %tbody
    - @teachers.each_with_index do |teacher|
      %tr
        %td= teacher.id
        %td
          %a{href: "/teachers/#{teacher.id}"}= teacher.name
        %td= teacher.program
        %td= teacher.birthday
        %td= teacher.email
