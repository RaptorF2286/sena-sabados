%h1 Listado de profesores

%a.mdc-button.mdc-button--outlined{href: '/teachers/new'}
  %i.material-icons.mdc-button__icon{"aria-hidden" => "true"} person_add
  %span.mdc-button__label Crear Profesor

%hr/

%table{style: 'text-align: center'}
  %thead
    %tr
      %th Nombre
      %th Correo
      %th Fecha de nacimiento
      %th Programa
  %tbody
    - @teachers.each_with_index do |teacher, index|
      %tr
        %td
          %a{href: "/teachers/#{index}"}= teacher.nombre 
        %td= teacher.programa
        %td= teacher.fecha_nacimiento
        %td= teacher.correo
